# Confluent Cloud API Keys
# copy this file to .env and fill in your API keys
# Source this file before running scripts: source .env

# Kafka Cluster API Keys
export KAFKA_API_KEY="your-kafka-key"
export KAFKA_API_SECRET="your-kafka-secret"

# Schema Registry API Keys
export SCHEMA_REGISTRY_API_KEY="your-schema-registry-key"
export SCHEMA_REGISTRY_API_SECRET="your-schema-registry-secret"

# Tableflow API Keys
export TABLEFLOW_API_KEY="your-tableflow-api-key"
export TABLEFLOW_API_SECRET="your-tableflow-api-secret"

# Confluent Cloud Organization ID
export CC_ORG_ID="your-cc-org-id"

# Confluent Cloud Environment ID
export CC_ENV_ID="your-cc-env-id"

# Confluent Cloud Kafka Cluster ID
export CC_KAFKA_CLUSTER="your-kafka-cluster-id"
export CC_CONNECT_CLUSTER="your-connector-cluster-id"

# Kafka Bootstrap Servers
export BOOTSTRAP_SERVERS="your-bootstrap-servers"

# Flink Compute Pool ID
export FLINK_POOL_ID="your-flink-pool-id"

# Flink Statement ID (for application management)
export FLINK_STATEMENT_ID="your-flink-statement-id"
